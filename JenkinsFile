pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ariefan/sihot'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'composer install'
                }
            }
        }
        stage('Run Migrations') {
            steps {
                script {
                    sh 'php artisan migrate --force'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'rsync -avz --delete . jawalab@103.127.135.234:/var/www/html/sihot'
                    sh 'ssh jawalab@103.127.135.234 "cd /var/www/html/sihot && php artisan cache:clear && php artisan config:cache"'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful'
        }
        failure {
            echo 'Deployment Failed'
        }
    }
}
